<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".settingsActivity">


    <LinearLayout

        android:id="@+id/wrapper"

        android:layout_width="match_parent"

        android:layout_height="160dp"
        android:orientation="vertical" >

        <!--<TextView android:id="@+id/textView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Lorem Ipsum"-->
            <!--app:layout_constraintBottom_toBottomOf="@+id/spinner1"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"/>-->

            <!--&lt;!&ndash;app:layout_constraintTop_toTopOf="@+id/spinner1" />&ndash;&gt;-->



        <TextView android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select source type here: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:entries="@array/country_arrays"
            android:prompt="@string/source_prompt"
            android:background="@color/theme_blue_primary"
            />
        <TextView android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select target type here: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:entries="@array/country_arrays2"
            android:prompt="@string/target_prompt"
            android:background="@color/theme_blue_primary"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            />



    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/my_recycler_view"-->
        <!--android:scrollbars="vertical"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->


    <!--was ListView-->
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/list_items"
        android:layout_width="match_parent"


        android:layout_height="595dp"

        android:layout_below="@+id/wrapper"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:scrollbars="vertical" />

</RelativeLayout>